<style>

#div_textbook {
    background-color: lightgrey;
    border: 3px dashed #ddd;
}

#book_name {
    color: #7d171d;
}

#book_detail {
    font-family: Georgia;
    font-size: 16px;
}
    
    
#div_search_button {
    display: inline;
    margin-left: 20px;
}

#div_search_text {
    display: inline;
}
    
</style>

<div class="title-container">
    <h1 style= "font-family: 'Lato', sans-serif;">Textbooks for Sale</h1>
</div>




<div class="textbooks">
    <% @textbooks.each do|textbook| %>
    <div class="textbook">
        <div class="thumbnail" id="div_textbook">
            <div class="caption">
                <h3 style= "font-family: 'Lato', sans-serif;" ><%= 'Book name: '%><%= link_to textbook.name, textbook_path(textbook), id:"book_name"%>&nbsp &nbsp &nbsp &nbsp<%= "Price:"%><%= "  $"%><%= textbook.price%></h3>
                <p id="book_detail"><%= "Course: " %><%= textbook.course%>&nbsp &nbsp &nbsp &nbsp<%= "Instructor: " %><%= textbook.instructor %></p>
                <p id="book_detail"><%= "Description: " %><%= textbook.description %></p>
                <p id="book_detail" class="data"><%= "Posted: " %> <%= textbook.created_at.strftime("%B %d, %Y") %> </p>

             
            </div>
            
        </div>
    </div>
<% end %>
</div>


<div>
    <p id="div_search_text" style="font-family: Georgia;font-size:18px"><%= "Can't find the right book?"%></p> 
    <INPUT TYPE="button" onClick="history.go(0)" VALUE="Search Here" id="div_search_button"> 
</div>

