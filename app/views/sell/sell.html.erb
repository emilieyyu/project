<style>

#div_textbook {
    background-color: lightgrey;
}

#div_detail {
    color: #7d171d;
}
    
    
</style>

<div class="title-container">
    <h1>Textbooks for Sale</h1>
</div>

<div class="textbooks">
    <% @textbooks.each do|textbook| %>
    <div class="textbook">
        <div class="thumbnail" id="div_textbook">
            <div class="caption">
                <h3><%= 'Book name:'%><%= link_to textbook.name, textbook_path(textbook), id:"div_detail"%>&nbsp &nbsp &nbsp &nbsp<%= "Price:"%><%= "  $"%><%= textbook.price%></h3>
                <p><%= "Course:" %><%= textbook.course%>&nbsp &nbsp &nbsp &nbsp<%= "Instructor:" %><%= textbook.instructor %></p>
                <p><%= "Description:" %><%= textbook.description %></p>
                <p class="data",> <%= textbook.created_at.strftime("%B %d, %Y") %> </p>

             
            </div>
            
        </div>
    </div>
<% end %>
</div>