
<%= form_for ([@textbook,@textbook.comments.build]) do |f| %>
    

    <p>
        <%= f.label :commenters %><br>
        <%= f.text_field :commenters, :maxlength=>"20" %>
    </p>
    
    <p>
        <%= f.label :body %><br> 
        <%= f.text_area :body, :size =>"35x7" %>
    </p>    
    <br>
    <p>
        <%= f.submit %>
    </p>

<% end %>


