<script>
function run(interval, frames) {
    var int = 2;
    
    function func() {
		var edit = document.getElementById("bgi");		
		edit.src="/../assets/background/book"+int+".jpg";        
		edit.classList.remove("fadeImage");		
		void edit.offsetWidth;
		edit.classList.add("fadeImage");
        int++;
        if(int === frames) { int = 1; }
    }
    
    var swap = window.setInterval(func, interval);
}
run(5000,5);
</script>
