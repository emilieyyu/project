<div class="title-container">
    <h1>Textbooks</h1>
    <%= link_to "New Textbook", new_textbook_path, class: "btn btn-default"%>
</div>
    
<div class="textbooks">
    <% @textbooks.each do|textbook| %>
    <div class="textbook">
        <div class="thumbnail">
            <div class="caption">
                <h3><%= link_to textbook.name, textbook_path(textbook) %></h3>
                <p><%= truncate(textbook.description, length: 150) %></p>
                <p>
                    <%= link_to "Edit", edit_textbook_path(textbook), class: "btn btn-default" %>
                    <%= link_to "Delete", textbook_path(textbook), data: {
                    confirm: "Are you sure you want to delete: #{textbook.name}?",
                    }, method: :delete %>
                </p>
            </div>
        </div>
    </div>
<% end %>
</div>
